<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_095_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_005_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_008_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

    <TextView
            android:id="@+id/setting_item_choose_gravity_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="調整亮度條引力"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/left_095_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/left_005_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_008_guideline" />

    <TextView
            android:id="@+id/setting_item_choose_gravity_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="吸附在螢幕的"
            android:textColor="#2A2C2E"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/left_005_guideline"
            app:layout_constraintTop_toBottomOf="@+id/setting_item_choose_gravity_item_title"
            app:layout_constraintVertical_bias="0.0" />

    <Spinner
            android:id="@+id/setting_item_choose_gravity_item_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/setting_item_choose_gravity_item_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/setting_item_choose_gravity_item_subtitle"
            app:layout_constraintTop_toTopOf="@+id/setting_item_choose_gravity_item_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>