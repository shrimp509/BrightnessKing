<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item">

    <TextView
            android:id="@+id/setting_item_report_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回報問題"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/left_005_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_008_guideline" />

    <TextView
            android:id="@+id/setting_item_report_item_subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="有 Bug 嗎?"
            android:textColor="#2A2C2E"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/left_005_guideline"
            app:layout_constraintTop_toBottomOf="@+id/setting_item_report_item_title"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
            android:id="@+id/setting_item_report_item_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="前往"
            android:textColor="#190FA1"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/left_095_guideline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/setting_item_report_item_subtitle2"
            app:layout_constraintTop_toTopOf="@+id/top_008_guideline"
            app:layout_constraintVertical_bias="0.5" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_005_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_095_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_008_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>